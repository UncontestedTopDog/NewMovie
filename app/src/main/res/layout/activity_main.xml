<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.newmovie.MainActivity">

    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:id="@+id/net_error_notice_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/net_error_bar_height"
        android:layout_below="@+id/fake_status_bar"
        android:background="#80000000">

        <TextView
            android:id="@+id/net_error_notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/net_error_notice"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/net_error_notice_text"
            android:src="@drawable/net_error_tips_icon"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_below="@+id/net_error_notice_bar"
        android:layout_above="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/home_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="2dp">


            <TextView
                android:id="@+id/home_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="首页"
                android:textSize="9dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/review_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="2dp">


            <TextView
                android:id="@+id/review_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="2"
                android:textSize="9dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homewoek_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="2dp">

            <TextView
                android:id="@+id/homework_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="3"
                android:textSize="9dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/me_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="2dp">

            <TextView
                android:id="@+id/me_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="3"
                android:textSize="9dp"/>

            <ImageView
                android:id="@+id/new_message_tip"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignRight="@+id/me_textview"
                />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
