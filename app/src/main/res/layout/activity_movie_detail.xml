<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.administrator.newmovie.MovieDetailActivity">

    <com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout
        android:id="@+id/fireworkypulltorefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_rocketAnimDuration="1000">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/poster_bg"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/poster_gaosi_bg" />

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:id="@+id/r_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="9dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/movie_chinese_name"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="天才枪手"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/movie_foreign_name"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Bad Genius"
                            android:textColor="@color/gray_text_color"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/label_background"
                            android:padding="5dp"
                            android:text="3D IMAX"
                            android:textColor="@color/label_text_color"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/style"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="喜剧 爱情"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/length_film"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="片长：100分钟"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/release_time"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="2017-09-30大陆上映"
                            android:textSize="15dp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">

                    <com.example.administrator.newmovie.CustomView.RoundImageView
                        android:id="@+id/poster"
                        android:layout_width="116dp"
                        android:layout_height="168dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="9dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bad_genius"
                        app:color="@color/white"
                        app:width="10"
                        app:style="0"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/r_left"
                    android:layout_toRightOf="@+id/r_left">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:ems="1"
                        android:gravity="center"
                        android:text="观众评分"
                        android:textSize="18dp"
                        android:typeface="monospace" />

                    <com.example.administrator.newmovie.CustomView.GradeProgress
                        android:id="@+id/seek_bar"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/t1" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rgut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r1"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/gut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/synopsis"
                    android:textColor="@color/text_black"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/pull"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/gut"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/pull_down" />

            </RelativeLayout>

            <com.example.administrator.newmovie.DirectorAndActors.DirectorAndActorBrierfCard
                android:layout_below="@+id/rgut"
                android:id="@+id/director_and_actor_brierf_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.example.administrator.newmovie.DirectorAndActors.DirectorAndActorBrierfCard>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/director_and_actor_brierf_card"
                android:id="@+id/nine_gird_list"
                android:layout_width="match_parent"
                android:layout_height="360dp"></android.support.v7.widget.RecyclerView>

               </RelativeLayout>

    </ScrollView>

    </com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_mian_color"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/white_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/like_default" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/share" />
        </LinearLayout>

    </RelativeLayout>

    <com.example.administrator.newmovie.CustomView.LoadingView
        android:visibility="visible"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
