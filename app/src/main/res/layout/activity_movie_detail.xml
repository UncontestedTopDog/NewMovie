<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.newmovie.MovieDetailActivity">

    <ImageView
        android:id="@+id/poster_bg"
        android:src="@drawable/poster_gaosi_bg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <RelativeLayout
        android:id="@+id/r1"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:id="@+id/r_left"
            android:padding="9dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/movie_chinese_name"
                    android:text="天才枪手"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/movie_foreign_name"
                    android:padding="5dp"
                    android:text="Bad Genius"
                    android:textSize="15dp"
                    android:textColor="@color/gray_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3D IMAX"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:textColor="@color/label_text_color"
                    android:background="@drawable/label_background" />

                <TextView
                    android:id="@+id/style"
                    android:text="喜剧 爱情"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/location"
                    android:text="中国大陆/100分钟"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/time"
                    android:text="2017-09-30大陆上映"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/poster"
                android:src="@drawable/showing_movie_test"
                android:scaleType="fitXY"
                android:layout_width="116dp"
                android:layout_height="168dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="9dp" />

        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:src="@drawable/white_back"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/like"
                    android:src="@drawable/like_default"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/share"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/share"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/r_left"
            android:layout_toEndOf="@+id/r_left">
            <com.example.administrator.newmovie.GradeProgress
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:id="@+id/seek_bar"
                android:layout_width="1dp"
                android:layout_height="200dp"/>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
