<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.newmovie.MovieDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="252dp">

        <ImageView
            android:id="@+id/poster_bg"
            android:src="@drawable/poster_gaosi_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <RelativeLayout
            android:padding="9dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/movie_chinese_name"
                android:text="天才枪手"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/movie_chinese_name"
                android:id="@+id/movie_foreign_name"
                android:padding="5dp"
                android:text="Bad Genius"
                android:textSize="15dp"
                android:textColor="@color/gray_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:src="@drawable/showing_movie_test"
                android:scaleType="fitXY"
                android:layout_width="116dp"
                android:layout_height="168dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="9dp" />

            <TextView
                android:background="@color/green_grade"
                android:text="10.0"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
