<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_below="@+id/banner"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="45dp">
        <TextView
            android:text="剧照"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/activity_back_color"
            android:id="@+id/image_all"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/icon_more_right" />

    </RelativeLayout>

    <com.example.administrator.newmovie.StagePhoto.StagePhotoRecyclerView
        android:id="@+id/stage_photo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.example.administrator.newmovie.StagePhoto.StagePhotoRecyclerView>

</LinearLayout>